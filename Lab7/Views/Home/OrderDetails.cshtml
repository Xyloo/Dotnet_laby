@model Lab7.Models.Invoice

@{
    ViewData["Title"] = "Order Details";
}

<h1>Order Details</h1>

<div>
    <h4>Invoice</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.InvoiceId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.InvoiceId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InvoiceDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InvoiceDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BillingAddress)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BillingAddress) 
            @Html.DisplayFor(model => model.BillingCity) 
            @Html.DisplayFor(model => model.BillingState) 
            @Html.DisplayFor(model => model.BillingCountry)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Total)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Total)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.InvoiceLines)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.InvoiceLines.First().Track.TrackId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.InvoiceLines.First().Track.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.InvoiceLines.First().Track.UnitPrice)
                        </th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var item in Model.InvoiceLines)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Track.TrackId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Track.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Track.UnitPrice)
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.InvoiceId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
